<!--pages/content/content.wxml-->
<view class="gray-bg content-container">
  <view>
    <image class="goods-image" src="../../assets/goods4.png" />
  </view>
  <view class="main">
    <view class="goods-info">
      <view class="top">
        <view class="price">¥1999.00<text>2399.00</text></view>
        <view class="purchase">2314人付款</view>
      </view>
      <view class="title">爆款小米(MI)平衡车 Ninebot 九号平衡车 4倍布行速度 智能电动体感车</view>
      <view class="desc">九号平衡车标准版白色</view>
    </view>
    <view class="desc-tit"><text />商品详情</view>
    <image class="info-image" src="../../assets/goods4.png" mode="widthFix"/>
  </view>
  <van-goods-action>
    <van-goods-action-icon icon="chat-o" text="客服" bind:click="onClickIcon" />
    <van-goods-action-icon icon="cart-o" text="购物车" bind:click="onClickIcon" />
    <van-goods-action-button
      text="加入购物车"
      type="warning"
      bind:click="onClickButton"
    />
    <van-goods-action-button text="立即购买" bind:click="onClickButton" />
  </van-goods-action>
</view>
