<view class="container logist-container gray-bg">
  <view class="top-box">
    <!-- <view>物流状态: <text>已签收</text></view> -->
    <view>快递公司: 
      <text wx:if="{{shipper==='ems'}}">EMS</text>
      <text wx:if="{{shipper==='zhongtongkuaiyun'}}">中通快运</text>
    </view>
    <view>快递单号: {{code}}<text class="fu">复制</text></view>
  </view>
  <view class="logist-box">
    <van-steps
      steps="{{ steps }}"
      active="{{ active }}"
      direction="vertical"
      active-color="#467BFD"
      inactive-color="#666666"
      active-icon="passed"
      inactive-icon="underway-o"
    />
  </view>
  <van-toast id="van-toast" />
</view>
