<view class="container logist-container gray-bg">
  <view class="top-box">
    <!-- <view>物流状态: <text>已签收</text></view> -->
    <view>快递公司: 
      <text wx:if="{{shipper==='STO'}}">申通快递</text>
      <text wx:if="{{shipper==='YTO'}}">圆通快递</text>
      <text wx:if="{{shipper==='ZTO'}}">中通快递</text>
    </view>
    <view>快递单号: {{code}}<text class="fu">复制</text></view>
  </view>
  <view class="logist-box">
    <van-steps
      steps="{{ steps }}"
      active="{{ active }}"
      direction="vertical"
      active-color="#467BFD"
      inactive-color="#D8D8D8"
      active-icon="passed"
      inactive-icon="underway-o"
    />
  </view>
</view>
